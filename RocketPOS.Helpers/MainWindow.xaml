<Window x:Class="RocketPOS.Helpers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RocketPOS.Helpers"
        mc:Ignorable="d"
        Title="RocketPOS" Height="1000" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="700"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--Main Row 0 Column 0-->
        <TextBlock x:Name="txtbRocketPOS" Text="RocketPOS" Margin="10,10,10,10" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold"/>
        <!--Main Row 1 Column 0-->
        <StackPanel x:Name="leftPanel" Orientation="Vertical" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
            <TextBox x:Name="txtSearchModifyOrder" Margin="10,2,10,2" Width="250" Height="30"/>
            <DataGrid x:Name="gdModifyOrder" Margin="10,2,10,2" Width="250" Height="250" />
            <Button x:Name="btnModifyOrder" Content="Mofify Order/Add Item/Change Table" Margin="10,2,10,2" Width="250" Height="30" />
            <Button x:Name="btnOrderDetails" Content="Order Details" Margin="10,2,10,2" Width="250" Height="30" />
            <Button x:Name="btnPrintKot" Content="Print KOT" Margin="10,2,10,2" Width="250" Height="30" />
            <Button x:Name="btnCreateInvoiceAndClose" Content="Create Invoice And Close" Margin="10,2,10,2" Width="250" Height="30" />
            <Button x:Name="btnCancelOrder" Content="Cancel Order" Margin="10,2,10,2" Width="250" Height="30" />
            <Button x:Name="btnKitchenStatus" Content="Kitchen Status" Margin="10,2,10,2" Width="250" Height="30" />
        </StackPanel>
        <!--Main Row 2 Column 0-->

        <!--Main Row 0 Column 1-->
        <StackPanel x:Name="headerCenterPanel" Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
            <Button x:Name="btnOpenHoldSales" Content="Open Hold Sales" Margin="10,10,10,10"  Width="100" Height="40"/>
            <Button x:Name="btnCalculator" Content="Calculator" Margin="10,10,10,10" Width="80" Height="40" />
            <Button x:Name="btnReadBeforeBegin" Content="Read Before Begin" Margin="10,10,10,10" Width="120" Height="40" />
        </StackPanel>

        <!--Main Row 2 Column 2-->
        <Grid x:Name="SaleItemGrid"  Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!--Row 0 Column 0-->
            <Button x:Name="btnDineIn" Content="Dine In" Grid.Row="0" Grid.Column="0" Margin="10,10,10,10"  Width="100" Height="40"/>
            <Button x:Name="btnTakeAway" Content="Take Away"  Grid.Row="0" Grid.Column="1" Margin="10,10,10,10"  Width="100" Height="40"/>
            <Button x:Name="btnDelivery" Content="Delivery"  Grid.Row="0" Grid.Column="2" Margin="10,10,10,10"  Width="100" Height="40"/>

            <!--Row 1 Column 0-->
            <ComboBox x:Name="cmbWaiter" Grid.Row="1" Grid.Column="0" Margin="10,10,10,10"  Width="100" Height="40"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" >
                <ComboBox x:Name="cmbCustomer" Margin="5,10,5,10"  Width="50" Height="40"/>
                <Button x:Name="btnEditCustomer" Content="Edit" Margin="5,10,5,10"  Width="25" Height="40"/>
                <Button x:Name="btnAddCustomer" Content="Add" Margin="5,10,5,10"  Width="25" Height="40"/>
            </StackPanel>
            <Button x:Name="btnTable" Content="Table" Grid.Row="1" Grid.Column="2" Width="100" Height="40"/>
           
            <!--Row 2 Column 0-->
            <StackPanel x:Name="saleOrderPanel" Orientation="Vertical" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                <DataGrid x:Name="dgSaleItem" Width="350" Height="200">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Edit">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Edit" x:Name="btnEditSaleItem" Click="btnEditSaleItem_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Product" IsReadOnly="True" Binding="{Binding Path=Product}" Width="80"></DataGridTextColumn>
                        <DataGridTextColumn Header="Price" IsReadOnly="True"  Binding="{Binding Path=Price}" Width="50"></DataGridTextColumn>
                        
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="-" x:Name="btnMinusQty" Click="btnMinusQty_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Qty" IsReadOnly="True" Binding="{Binding Path=Qty}" Width="50"></DataGridTextColumn>
                        
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="+" x:Name="btnPlusQty" Click="btnPlusQty_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Discount" IsReadOnly="True"  Binding="{Binding Path=Discount}" Width="80"></DataGridTextColumn>
                        <DataGridTextColumn Header="Total" IsReadOnly="True"  Binding="{Binding Path=Total}" Width="80"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <Popup Name="EditSaleItemPopUp"
               Placement="Center"
               AllowsTransparency="False">
                <Grid Width="250" Height="250" Background="LightBlue">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="txtbPopUpItemName" Text="Dummy"  Margin="5,5,5,5" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>

                    <TextBlock x:Name="txtbPopUpQty" Margin="5,5,5,5" Text="Quantity" Grid.Row="1" Grid.Column="0"/>
                    <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                        <Button x:Name="btnPopUpMinusQty"  Margin="0,5,0,5" Content="-" Width="15" Click="btnPopUpMinusQty_Click"/>
                        <TextBlock x:Name="txtbPopUpOriginalQtyCount" Visibility="Hidden" />
                        <TextBlock x:Name="txtbPopUpQtyCount"  Margin="0,5,0,5" />
                        <Button x:Name="btnPopUpPlusQty" Content="+"  Margin="5,5,5,5" Width="15" Click="btnPopUpPlusQty_Click" />
                    </StackPanel>
                    <TextBlock Text="$" Margin="5,5,5,5" Grid.Row="1" Grid.Column="2"/>
                    <TextBlock x:Name="txtbPopUpItemOriginalTotal" Grid.Row="1" Grid.Column="2" Visibility="Hidden"/>
                    <TextBlock x:Name="txtbPopUpItemTotal"  HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" Margin="5,5,5,5"/>
                    <TextBlock x:Name="txtbPopUpDiscount" Text="Discount" Margin="5,5,5,5" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="$" Margin="5,5,5,5" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"/>
                    <TextBox x:Name="txtPopUpDiscount" Margin="5,5,5,5" Grid.Row="2" Width="350" Grid.Column="2" />
                    <TextBlock x:Name="txtbPopUpItemSubTotal" Text="Total" Margin="5,5,5,5" Grid.Row="3" Grid.Column="1"/>
                    <TextBlock Text="$" Margin="5,5,5,5" Grid.Row="3" Grid.Column="2"/>
                    <TextBlock x:Name="txtbPopUpItemOriginalSubTotalAmount" Text="0" Margin="5,5,5,5" Grid.Row="3" Grid.Column="2" Visibility="Hidden"/>
                    <TextBlock x:Name="txtbPopUpItemSubTotalAmount" Text="0" Margin="5,5,5,5" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center"/>
                    <Button x:Name="btnPopUpCancel" Content="Cancel" Margin="5,5,5,5" Grid.Row="7" Grid.Column="0" Click="btnPopUpCancel_Click"/>
                    <Button x:Name="btnPopUpAddToCart" Content="Add To Cart" Margin="5,5,5,5" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Click="btnPopUpAddToCart_Click"/>
                </Grid>
            </Popup>
            
            <!--Row 3 Column 0-->
            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Left">
                <TextBlock  Grid.Row="3" Grid.Column="0" x:Name="txtbTotalItem" Text="Total Item :"  Margin="5,5,5,5"/>
                <TextBlock x:Name="txtbTotalItemCount" Text="0"  Margin="5,5,5,5"/>
            </StackPanel>
            
            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbSubTotal" Text="Sub Total"  Margin="5,5,5,5" />
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBlock x:Name="txtbSubTotalAmount" Text="0"  Margin="5,5,5,5"/>
            </StackPanel>

            <!--Row 4 Column 0-->
            <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbDiscount" Text="Total Discount"  Margin="5,5,5,5"/>
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBox x:Name="txtDiscount" Margin="5,5,5,5" Width="50" Height="20"/>
            </StackPanel>
            
            <!--Row 5 Column 0-->
            <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbTotalDiscount" Text="Total Discount"  Margin="5,5,5,5"/>
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBlock x:Name="txtbTotalDiscountAmount" Text="0"  Margin="5,5,5,5"/>
            </StackPanel>
            
            <!--Row 6 Column 0-->
            <StackPanel Grid.Row="6" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbServiceDeliveryCharge" Text="Service/Delivery Charge"  Margin="5,5,5,5"/>
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBox x:Name="txtServiceDeliveryCharge" Margin="5,5,5,5" Width="50" Height="20"/>
            </StackPanel>
            
            <!--Row 7 Column 0-->
            <StackPanel Grid.Row="7" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbTotalPayable" Text="Total Payable"  Margin="5,5,5,5"/>
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBlock x:Name="txtbTotalPayableAmount" Text="0"  Margin="5,5,5,5"/>
            </StackPanel>

            <!--Row 8 Column 0-->
            <StackPanel Grid.Row="8" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" >
                <Button x:Name="btnCancel" Content="Cancel" Margin="5,5,5,5"  Width="80" Height="40"/>
                <Button x:Name="btnHold" Content="Hold" Margin="5,5,5,5"  Width="80" Height="40"/>
                <Button x:Name="btnDirectInvoice" Content="Direct Invoice" Margin="5,5,5,5"  Width="80" Height="40"/>
                <Button x:Name="btnPlaceOrder" Content="Place Order" Margin="5,5,5,5"  Width="80" Height="40"/>
            </StackPanel>
        </Grid>

        <!--Main Row 0 Column 3-->
        <StackPanel x:Name="headerTopRightPanel" Orientation="Horizontal" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right">
            <Button x:Name="btnLastSale" Content="Last 10 Sale" Margin="10,10,10,10" Width="80" Height="40" />
            <Button x:Name="btnKitchenNotification" Content="Kitchen Notification" Margin="10,10,10,10" Width="120" Height="40" />
            <Button x:Name="btnRegister" Content="Register" Margin="10,10,10,10" Width="80" Height="40" />
            <Button x:Name="btnBack" Content="Back" Margin="10,10,10,10" Width="80" Height="40" />
            <Button x:Name="btnLogOut" Content="LogOut" Margin="10,10,10,10"  Width="80" Height="40"/>
        </StackPanel>

        <!--Main Row 1 Column 3-->
        <Grid x:Name="FoodMenuItem" Grid.Row="1" Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <!--Menu Image Row 1-->
            <TextBlock x:Name="txtbSearch" Text="Search : " Grid.Column="1" Grid.Row="1"/>
            <TextBox x:Name="txtSearch" Grid.Row="1" Grid.Column="2"  Margin="0,0,0,10" TextChanged="txtSearch_TextChanged"/>

            <!--Menu Image Row 2-->
            <ScrollViewer Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="spCategory" Orientation="Horizontal" >
                    <Button x:Name="btnAll" Click="GetSubCategory" Content="All" Width="50" Height="50" Margin="5,0,5,10"></Button>
                </StackPanel>
            </ScrollViewer>

            <!--Menu Image Row 3-->
            <ScrollViewer Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" >
                <WrapPanel x:Name="spSubCategory" Orientation="Horizontal">

                </WrapPanel>
            </ScrollViewer>
        </Grid>

        <!--Main Row 2 Column 3-->
        <StackPanel x:Name="footerPanel" Orientation="Horizontal" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right">
            <TextBlock x:Name="txtbUserName" Text="UserName" Margin="10,10,10,10" Width="80" Height="40" />
            <TextBlock x:Name="txtbDateTime" Text="DateTime" Margin="10,10,10,10" Width="80" Height="40" />
            <TextBlock x:Name="txtbOutletName" Text="Outlet Name" Margin="10,10,10,10" Width="80" Height="40" />
            <TextBlock x:Name="txtbClientName" Text="Client Name" Margin="10,10,10,10" Width="80" Height="40" />
        </StackPanel>
    </Grid>
</Window>

    