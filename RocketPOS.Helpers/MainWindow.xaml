<Window x:Class="RocketPOS.Helpers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RocketPOS.Helpers"
        mc:Ignorable="d"
        Title="RocketPOS" Height="768" Width="1200">
    <Grid Background="RoyalBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="700"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="387*"/>
            <RowDefinition Height="397*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--Main Row 0 Column 0-->
        <!--Main Row 1 Column 0-->
        <StackPanel x:Name="leftPanel" Orientation="Vertical" Grid.Column="0" Grid.RowSpan="4" Margin="-18,8,22,0">
            <TextBox x:Name="txtSearchModifyOrder" Style="{StaticResource TextBoxBaseStyle}"   Width="250" />
            <DataGrid x:Name="gdModifyOrder" Margin="10,2,10,2" Width="250" Height="400" />
            <Button x:Name="btnModifyOrder"  Style="{StaticResource btnOrangeLng}"  Content="Alter Order/Add Item/Change Table"  />
            <Button x:Name="btnOrderDetails" Style="{StaticResource btnOrangeLng}" Content="Order Details" />
            <Button x:Name="btnPrintKot" Style="{StaticResource btnOrangeLng}" Content="Print KOT" Click="btnPrintKot_Click" />
            <Button x:Name="btnCreateInvoiceAndClose" Style="{StaticResource btnOrangeLng}" Content="Create Invoice And Close" />
            <Button x:Name="btnCancelOrder" Style="{StaticResource btnOrangeLng}" Content="Cancel Order"  />
            <Button x:Name="btnKitchenStatus"  Style="{StaticResource btnOrangeLng}" Content="Kitchen Status"  />
        </StackPanel>
        <!--Main Row 2 Column 0-->

        <!--Main Row 0 Column 1-->
        <StackPanel x:Name="headerCenterPanel" Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
        </StackPanel>

        <!--Main Row 2 Column 2-->
        <Grid x:Name="SaleItemGrid"  Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3" Margin="266,-40,520,-150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" >

                <!--Row 0 Column 0-->
                <Button x:Name="btnDineIn" Style="{StaticResource btnOrange}"  Content="Dine In" Grid.Row="0" Grid.Column="0"   />
                <Button x:Name="btnTakeAway" Style="{StaticResource btnOrange}" Content="Take Away"  Grid.Row="0" Grid.Column="1"   />
                <Button x:Name="btnDelivery" Style="{StaticResource btnOrange}" Content="Delivery"  Grid.Row="0" Grid.Column="2"  />
                <Button x:Name="btnTableList" Style="{StaticResource btnOrange}" Content="Table"  Grid.Row="0" Grid.Column="3" />
            </StackPanel>

            <!--Row 1 Column 0-->
            <StackPanel Grid.Row="1" Grid.Column="0"  Grid.ColumnSpan="4" Orientation="Horizontal" >
                <ComboBox x:Name="cmbWaiter"   Width="100" Height="40"  Grid.Column="0"/>
                <ComboBox x:Name="cmbCustomer"   Width="50" Height="40"  Grid.Column="1"/>
                <Button x:Name="btnEditCustomer" Content="Edit"  Width="25" Height="40"  Grid.Column="2"/>
                <Button x:Name="btnAddCustomer" Content="Add"  Width="25" Height="40"  Grid.Column="3"/>
            </StackPanel>

            <!--Row 2 Column 0-->
            <StackPanel x:Name="saleOrderPanel" Orientation="Vertical" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">
                <DataGrid x:Name="dgSaleItem" Width="400" Height="360" ItemsSource="{Binding Path=SaleItemModel}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Edit">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Edit" x:Name="btnEditSaleItem" Click="btnEditSaleItem_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Product" IsReadOnly="True" Binding="{Binding Path=Product}" Width="80"></DataGridTextColumn>
                        <DataGridTextColumn Visibility="Hidden" IsReadOnly="True" Binding="{Binding Path=FoodMenuId}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Price" IsReadOnly="True"  Binding="{Binding Path=Price}" Width="50"></DataGridTextColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="-" x:Name="btnMinusQty" Click="btnMinusQty_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Qty" IsReadOnly="True" Binding="{Binding Path=Qty}" Width="50"></DataGridTextColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="+" x:Name="btnPlusQty" Click="btnPlusQty_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Discount" IsReadOnly="True"  Binding="{Binding Path=Discount}" Width="80"></DataGridTextColumn>
                        <DataGridTextColumn Header="Total" IsReadOnly="True"  Binding="{Binding Path=Total}" Width="80"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <Popup Name="EditSaleItemPopUp"
               Placement="Center"
               AllowsTransparency="False">
                <Grid Width="250" Height="250" Background="LightBlue">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="txtbPopUpItemName" Text="Dummy"  Margin="5,5,5,5" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>

                    <TextBlock x:Name="txtbPopUpQty" Margin="5,5,5,5" Text="Quantity" Grid.Row="1" Grid.Column="0"/>
                    <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                        <Button x:Name="btnPopUpMinusQty"  Margin="0,5,0,5" Content="-" Width="15" Click="btnPopUpMinusQty_Click"/>
                        <TextBlock x:Name="txtbPopUpOriginalQtyCount" Visibility="Hidden" />
                        <TextBlock x:Name="txtbPopUpQtyCount"  Margin="0,5,0,5" />
                        <Button x:Name="btnPopUpPlusQty" Content="+"  Margin="5,5,5,5" Width="15" Click="btnPopUpPlusQty_Click" />
                    </StackPanel>
                    <TextBlock Text="$" Margin="5,5,5,5" Grid.Row="1" Grid.Column="2"/>
                    <TextBlock x:Name="txtbPopUpItemOriginalTotal" Grid.Row="1" Grid.Column="2" Visibility="Hidden"/>
                    <TextBlock x:Name="txtbPopUpItemTotal"  HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" Margin="5,5,5,5"/>
                    <TextBlock x:Name="txtbPopUpDiscount" Text="Discount" Margin="5,5,5,5" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="$" Margin="5,5,5,5" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"/>
                    <TextBox x:Name="txtPopUpDiscount" Margin="5,5,5,5" Grid.Row="2" Width="350" Grid.Column="2" />
                    <TextBlock x:Name="txtbPopUpItemSubTotal" Text="Total" Margin="5,5,5,5" Grid.Row="3" Grid.Column="1"/>
                    <TextBlock Text="$" Margin="5,5,5,5" Grid.Row="3" Grid.Column="2"/>
                    <TextBlock x:Name="txtbPopUpItemOriginalSubTotalAmount" Text="0" Margin="5,5,5,5" Grid.Row="3" Grid.Column="2" Visibility="Hidden"/>
                    <TextBlock x:Name="txtbPopUpItemSubTotalAmount" Text="0" Margin="5,5,5,5" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center"/>
                    <Button x:Name="btnPopUpCancel" Content="Cancel" Margin="5,5,5,5" Grid.Row="7" Grid.Column="0" Click="btnPopUpCancel_Click"/>
                    <Button x:Name="btnPopUpAddToCart" Content="Add To Cart" Margin="5,5,5,5" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Click="btnPopUpAddToCart_Click"/>
                </Grid>
            </Popup>

            <!--Row 3 Column 0-->
            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Left">
                <TextBlock  Grid.Row="3" Grid.Column="0" x:Name="txtbTotalItem" Text="Total Item :"  Margin="5,5,5,5"/>
                <TextBlock x:Name="txtbTotalItemCount" Text="0"  Margin="5,5,5,5" />
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbSubTotal" Text="Sub Total"  Margin="5,5,5,5" />
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBlock x:Name="txtbSubTotalAmount" Text="0"  Margin="5,5,5,5"/>
            </StackPanel>

            <!--Row 4 Column 0-->
            <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbDiscount" Text="Total Discount"  Margin="5,5,5,5"/>
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBox x:Name="txtDiscount" Margin="5,5,5,5" Width="50" Height="20"/>
            </StackPanel>

            <!--Row 5 Column 0-->
            <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbTotalDiscount" Text="Total Discount"  Margin="5,5,5,5"/>
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBlock x:Name="txtbTotalDiscountAmount" Text="0"  Margin="5,5,5,5"/>
            </StackPanel>

            <!--Row 6 Column 0-->
            <StackPanel Grid.Row="6" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbServiceDeliveryCharge" Text="Service/Delivery Charge"  Margin="5,5,5,5"/>
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBox x:Name="txtServiceDeliveryCharge" Margin="5,5,5,5" Width="50" Height="20"/>
            </StackPanel>

            <!--Row 7 Column 0-->
            <StackPanel Grid.Row="7" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock x:Name="txtbTotalPayable" Text="Total Payable"  Margin="5,5,5,5"/>
                <TextBlock Text="$" Margin="5,5,5,5"/>
                <TextBlock x:Name="txtbTotalPayableAmount" Text="0"  Margin="5,5,5,5"/>
            </StackPanel>

            <!--Row 8 Column 0-->
            <StackPanel Grid.Row="8" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="4" >
                <Button x:Name="btnCancel" Style="{StaticResource btnOrange}" Content="Cancel"  Click="btnCancel_Click"/>
                <Button x:Name="btnHold" Style="{StaticResource btnOrange}" Content="Hold" />
                <Button x:Name="btnDirectInvoice" Style="{StaticResource btnOrange}" Content="Direct Invoice" />
                <Button x:Name="btnPlaceOrder" Style="{StaticResource btnOrange}" Content="Place Order" Click="btnPlaceOrder_Click"/>
            </StackPanel>
        </Grid>

        <!--Main Row 0 Column 3-->
        <StackPanel x:Name="headerTopRightPanel" Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="-35,-16,0,16" Grid.ColumnSpan="2">
            <Button x:Name="btnUnknow" Style="{StaticResource btnOrange}" Content=" UnKnow" />
            <Button x:Name="btnOpenHoldSales" Style="{StaticResource btnOrange}" Content=" Hold Sales" />
            <Button x:Name="btnCalculator"  Style="{StaticResource btnOrange}" Content="Calculator"  Click="btnCalculator_Click"/>
            <Button x:Name="btnReadBeforeBegin" Style="{StaticResource btnOrange}" Content="Read IT"  />
            <Button x:Name="btnLastSale" Style="{StaticResource btnOrange}" Click="btnLastSale_Click" Content="Last 10 Sale"  />
            <Button x:Name="btnKitchenNotification" Style="{StaticResource btnOrange}" Content="Kitchen Alter"  />
            <Button x:Name="btnRegister" Style="{StaticResource btnOrange}" Content="Register"   Click="btnRegister_Click" />
            <Button x:Name="btnBack" Style="{StaticResource btnOrange}" Content="Settings"  />
            <Button x:Name="btnLogOut" Style="{StaticResource btnLightRed}" Content="LogOut"   />
        </StackPanel>

        <!--Main Row 1 Column 3-->
        <Grid x:Name="FoodMenuItem" Grid.Column="2" Grid.RowSpan="3" Margin="120,64,22,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="103*"/>
                <ColumnDefinition Width="357*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <!-- <StackPanel x:Name="FoodMenuRightPanel" Orientation="Horizontal" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Margin="66,-16,0,16" Grid.ColumnSpan="2">-->
            <!--Menu Image Row 1-->
            <TextBox x:Name="txtSearch" Grid.Row="1" Grid.Column="2" Style="{StaticResource TextBoxBaseStyle}" Width="500"  TextChanged="txtSearch_TextChanged" Grid.ColumnSpan="3"/>

            <!--Menu Image Row 2-->
            <ScrollViewer Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="spCategory" Orientation="Horizontal" >
                    <Button x:Name="btnAll" Click="GetSubCategory" Content="All" Width="50" Height="50" ></Button>
                </StackPanel>
            </ScrollViewer>

            <!--Menu Image Row 3-->
            <ScrollViewer Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" Margin="2,0,-2,0" >
                <WrapPanel x:Name="spSubCategory" Orientation="Horizontal">
                </WrapPanel>
            </ScrollViewer>
            <!--   </StackPanel> 1-->
        </Grid>

        <!--Main Row 2 Column 3-->
        <StackPanel x:Name="footerPanel" Orientation="Horizontal" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Margin="300,397,0,0" Grid.RowSpan="2">
            <TextBlock x:Name="txtbUserName" Text="UserName" Margin="10,10,10,10" Width="80" Height="40" />
            <TextBlock x:Name="txtbDateTime" Text="DateTime" Margin="10,10,10,10" Width="80" Height="40" />
            <TextBlock x:Name="txtbOutletName" Text="Outlet Name" Margin="10,10,10,10" Width="80" Height="40" />
            <TextBlock x:Name="txtbClientName" Text="Client Name" Margin="10,10,10,10" Width="80" Height="40" />
        </StackPanel>
    </Grid>
</Window>

    