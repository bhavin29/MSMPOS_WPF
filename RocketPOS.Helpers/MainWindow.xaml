<Window x:Class="RocketPOS.Helpers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		       xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:RocketPOS.Helpers"
        mc:Ignorable="d"
        Title="RocketPOS" Height="768" Width="1200" WindowStartupLocation="CenterScreen" Background="RoyalBlue">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="610"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <!--Top header-->
        <Grid Grid.Row="0" >
            <StackPanel x:Name="HeaderPanel" Orientation="Vertical" Margin="5" >
                <TextBlock x:Name="txtbClientNam22e1"  Style="{StaticResource txtBlock}" Text="WELCOME TO ROCKET POS WELCOME TO ROCKET POSWELCOME TO ROCKET POSWELCOME TO ROCKET POSWELCOME TO ROCKET POSWELCOME TO ROCKET POSWELCOME TO ROCKET POS"  Height="25" />
            </StackPanel>
        </Grid>
        <!--Log out row-->
        <Grid Grid.Row="1" >
            <StackPanel x:Name="headerTopRightPanel" Orientation="Horizontal"   >
                <TextBox x:Name="txtSearchModifyOrder" Style="{StaticResource TextBoxBaseStyle}"   Width="250" TextChanged="searchSalesOrder"/>
                <Button x:Name="btnUnknow" Style="{StaticResource btnOrange}" Content="UnKnow" />
                <Button x:Name="btnUnknow1" Style="{StaticResource btnOrange}" Content="UnKnow" />
                <Button x:Name="btnCalculator"  Style="{StaticResource btnOrange}" Content="Calculator"  Click="btnCalculator_Click"/>
                <Button x:Name="btnReadBeforeBegin" Style="{StaticResource btnOrange}" Content="Read IT"  />
                <Button x:Name="btnLastSale" Style="{StaticResource btnOrange}"  Content="Last 10 Sale"  />
                <Button x:Name="btnKitchenNotification" Style="{StaticResource btnOrange}" Content="Kitchen Alter"  />
                <Button x:Name="btnRegister" Style="{StaticResource btnOrange}" Content="Register"   Click="btnRegister_Click" />
                <Button x:Name="btnBack" Style="{StaticResource btnOrange}" Content="Settings"  />
                <Button x:Name="btnLogOut" Style="{StaticResource btnLightRed}" Content="LogOut" Width="125" Click="btnLogOut_Click"  />
            </StackPanel>
        </Grid>
        <!--Main Functional area-->
        <Grid Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="405"/>
                <ColumnDefinition Width="545"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*">
                </RowDefinition>
            </Grid.RowDefinitions>

            <!--Left section-->
            <Grid Grid.Column="0" Background="RoyalBlue">
                <StackPanel x:Name="leftPanel" Orientation="Vertical" >
                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <RadioButton x:Name="rdbPendingSales" Background="Orange" Style="{StaticResource {x:Type ToggleButton}}" Grid.Row="0" Grid.Column="0" Checked="searchSalesOrder">Pending Sales</RadioButton>
                        <RadioButton x:Name="rdbHoldSales" Background="Orange" Style="{StaticResource {x:Type ToggleButton}}"  Grid.Row="0" Grid.Column="1" Checked="searchSalesOrder">Hold Sales</RadioButton>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <RadioButton x:Name="rdbAllSales" Background="Orange" Style="{StaticResource {x:Type ToggleButton}}" Margin="5,5,5,5" Width="50" Grid.Column="0" Checked="searchSalesOrder">All</RadioButton>
                            <RadioButton x:Name="rdbDineInSales" Background="Orange" Style="{StaticResource {x:Type ToggleButton}}" Margin="5,5,5,5" Width="50" Grid.Column="0" Checked="searchSalesOrder">DI</RadioButton>
                            <RadioButton x:Name="rdbTakeAwaySales" Background="Orange" Style="{StaticResource {x:Type ToggleButton}}" Margin="5,5,5,5" Width="50" Grid.Column="0" Checked="searchSalesOrder">TA</RadioButton>
                            <RadioButton x:Name="rdbDeliverySales" Background="Orange" Style="{StaticResource {x:Type ToggleButton}}" Margin="5,5,5,5" Width="50" Grid.Column="0" Checked="searchSalesOrder" >D</RadioButton>
                        </StackPanel>
                    </Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Width="250" Height="357" Background="White" >
                        <ListBox x:Name="lbCustomerOrderList" HorizontalAlignment="Center">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Expander Name="epOrder" Background="LightGray"   
                                        HorizontalAlignment="Center" Header="{Binding Id}" FlowDirection="RightToLeft"   
                                        ExpandDirection="Down" IsExpanded="False" Margin="10,2,10,2" Width="250"    
                                        FontSize="20" FontWeight="Bold" Foreground="Black" Expanded="epOrder_Expanded" LostFocus="epOrder_LostFocus">
                                            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" >
                                                <TextBlock Text="{Binding CustomerId}"/>
                                                <TextBlock Text="{Binding CustomerName}"/>
                                                <TextBlock Text="{Binding WaiterName}"/>
                                            </StackPanel>
                                        </Expander>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                    <Button x:Name="btnModifyOrder"  Style="{StaticResource btnOrangeLng}"  Content="Alter Order/Add Item/Change Table" Click="btnModifyOrder_Click" />
                    <Button x:Name="btnPrintKot" Style="{StaticResource btnOrangeLng}" Content="Print KOT"  />
                </StackPanel>
            </Grid>

            <!--center section-->
            <Grid Grid.Column="1" >
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="405"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="340"/>
                        <RowDefinition Height="125"/>
                        <RowDefinition Height="50"/>

                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="405"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <StackPanel  Orientation="Horizontal" >
                            <!--Row 0 Column 0-->
                            <RadioButton x:Name="rdbDineInOrderType" Background="Orange" Style="{StaticResource {x:Type ToggleButton}}" Margin="5,5,5,5" Width="100">Dine In</RadioButton>
                            <RadioButton x:Name="rdbTakeAwayOrderType" Background="Orange" Style="{StaticResource {x:Type ToggleButton}}" Margin="5,5,5,5" Width="100">Take Away</RadioButton>
                            <RadioButton x:Name="rdbDeliveryOrderType" Background="Orange" Style="{StaticResource {x:Type ToggleButton}}" Margin="5,5,5,5" Width="100">Delivery</RadioButton>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <StackPanel  Orientation="Horizontal" >
                            <ComboBox x:Name="cmbWaiter" Style="{StaticResource cmbBox}" Width="100" Height="50" ItemsSource="{Binding}" SelectedValuePath="Id" DisplayMemberPath="FullName" />
                            <ComboBox x:Name="cmbCustomer" Style="{StaticResource cmbBox}"    Width="100" Height="50" ItemsSource="{Binding}" SelectedValuePath="Id" DisplayMemberPath="CustomerName"  />
                            <Button x:Name="btnEditCustomer" Style="{StaticResource btnOrange}" Content="Edit" Click="btnEditCustomer_Click"/>
                            <Button x:Name="btnAddCustomer" Style="{StaticResource btnOrange}"  Content="Add" Click="btnAddCustomer_Click"   />
                        </StackPanel>

                        <Popup Name="ppCustomerAdd" Placement="Center" AllowsTransparency="False">
                            <Grid Width="300" Height="350" Background="LightBlue">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="65"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Add Customer" Margin="5,5,5,5" Height="20" Width="100" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <Label x:Name="lblPPCName" Content="Name *" Height="40" Width="290" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
                                <TextBox x:Name="txtPPCName" Text="{Binding CustomerName}"  Height="40" Width="290" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <Label Content="Phone *" Height="40" Width="290" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>
                                <TextBox x:Name="txtPPCPhone" Text=""  Height="40" Width="290" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <Label Content="Email " Height="40" Width="290" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"/>
                                <TextBox x:Name="txtPPCEmail" Text=""  Height="40" Width="290" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <Label Content="Address " Height="40" Width="290" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"/>
                                <TextBox x:Name="txtPPCAddress" Text=""  Height="40" Width="290" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <Button x:Name="btnPPCCancel" Content="Cancel" Height="40" Width="120" Margin="5,5,5,5" Grid.Row="9" Grid.Column="0" Click="btnPPCCancel_Click"/>
                                <Button x:Name="btnPPCAddCustomer" Content="Add Customer" Height="40" Width="120" Margin="5,5,5,5" Grid.Row="9" Grid.Column="1" Click="btnPPCAddCustomer_Click" />
                            </Grid>
                        </Popup>
                    </Grid>
                    
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" >

                            <DataGrid x:Name="dgSaleItem" ItemsSource="{Binding SaleItemModel}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Edit">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Edit" x:Name="btnEditSaleItem" Click="btnEditSaleItem_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Visibility="Hidden" IsReadOnly="True" Binding="{Binding CustomerOrderItemId}"/>
                                    <DataGridTextColumn Header="Product" IsReadOnly="True" Binding="{Binding Product}" Width="115"/>
                                    <DataGridTextColumn Visibility="Hidden" IsReadOnly="True" Binding="{Binding FoodMenuId}"/>
                                    <DataGridTextColumn Header="Price" IsReadOnly="True"  Binding="{Binding Price}" Width="40"/>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="-" x:Name="btnMinusQty" Click="btnMinusQty_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Qty" IsReadOnly="True" Binding="{Binding Qty}" Width="30"/>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="+" x:Name="btnPlusQty" Click="btnPlusQty_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Discount" IsReadOnly="True"  Binding="{Binding Discount}" Width="50"/>
                                    <DataGridTextColumn Header="Total" IsReadOnly="True"  Binding="{Binding Total}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </StackPanel>

                        <Popup Name="EditSaleItemPopUp" Placement="Center" AllowsTransparency="False">
                            <Grid Width="250" Height="250" Background="LightBlue">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="txtbPopUpItemName" Text="Dummy"  Margin="5,5,5,5" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>

                                <TextBlock x:Name="txtbPopUpQty" Margin="5,5,5,5" Text="Quantity" Grid.Row="1" Grid.Column="0"/>
                                <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                                    <Button x:Name="btnPopUpMinusQty"  Margin="0,5,0,5" Content="-" Width="15" Click="btnPopUpMinusQty_Click"/>
                                    <TextBlock x:Name="txtbPopUpOriginalQtyCount" Visibility="Hidden" />
                                    <TextBlock x:Name="txtbPopUpQtyCount"  Margin="0,5,0,5" />
                                    <Button x:Name="btnPopUpPlusQty" Content="+"  Margin="5,5,5,5" Width="15" Click="btnPopUpPlusQty_Click" />
                                </StackPanel>
                                <TextBlock Text="$" Margin="5,5,5,5" Grid.Row="1" Grid.Column="2"/>
                                <TextBlock x:Name="txtbPopUpItemOriginalTotal" Grid.Row="1" Grid.Column="2" Visibility="Hidden"/>
                                <TextBlock x:Name="txtbPopUpItemTotal"  HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" Margin="5,5,5,5"/>
                                <TextBlock x:Name="txtbPopUpDiscount" Text="Discount" Margin="5,5,5,5" Grid.Row="2" Grid.Column="0"/>
                                <TextBlock Text="$" Margin="5,5,5,5" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"/>
                                <TextBox x:Name="txtPopUpDiscount" Margin="5,5,5,5" Grid.Row="2" Width="350" Grid.Column="2" TextChanged="txtPopUpDiscount_TextChanged"/>
                                <TextBlock x:Name="txtbPopUpItemSubTotal" Text="Total" Margin="5,5,5,5" Grid.Row="3" Grid.Column="1"/>
                                <TextBlock Text="$" Margin="5,5,5,5" Grid.Row="3" Grid.Column="2"/>
                                <TextBlock x:Name="txtbPopUpItemOriginalSubTotalAmount" Text="0" Margin="5,5,5,5" Grid.Row="3" Grid.Column="2" Visibility="Hidden"/>
                                <TextBlock x:Name="txtbPopUpItemSubTotalAmount" Text="0" Margin="5,5,5,5" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center"/>
                                <Button x:Name="btnPopUpCancel" Content="Cancel" Margin="5,5,5,5" Grid.Row="7" Grid.Column="0" Click="btnPopUpCancel_Click"/>
                                <Button x:Name="btnPopUpAddToCart" Content="Add To Cart" Margin="5,5,5,5" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Click="btnPopUpAddToCart_Click"/>
                            </Grid>
                        </Popup>

                    </Grid>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="255"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="txtbTotalItem" Style="{StaticResource txtBlock}"  Text=" Total Item :  "  />
                                <TextBlock x:Name="txtbTotalItemCount" Style="{StaticResource txtBlock}" Text="0"   />
                                <TextBlock x:Name="txtbOrderId" Text="0"  Visibility="Hidden"/>
                            </StackPanel>
                            
                        </Grid>
                        <Grid Grid.Row="0"  Grid.Column="1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 30 0">
                                <TextBlock x:Name="txtbSubTotal" Style="{StaticResource txtBlock}" Text="Gross Total: "   />
                                <TextBlock x:Name="txtbSubTotalAmount" Style="{StaticResource txtBlock}" Text="0.00"  />
                            </StackPanel>
                            
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="0">
                            <Button x:Name="btnKitchenStatus" Visibility="Hidden"  Style="{StaticResource btnOrangeLng}" Content="Kitchen Status" Width="150" Height="25"  />
                        </Grid>
                        
                        <Grid Grid.Row="1"  Grid.Column="1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 30 0">
                                <Button x:Name="btnDicountPopUp" Content="%"  Width="50" Height="20" Click="btnDicountPopUp_Click"/>
                                <TextBlock x:Name="txtbDiscount" Style="{StaticResource txtBlock}" Text="Discount %: "  />
                                <TextBox x:Name="txtDiscount"  Width="50" Height="20"/>
                                <TextBlock x:Name="txtbSubTotalDiscountAmount" Visibility="Hidden" />
                            </StackPanel>
                            <Popup Name="ppDiscountPopUp" Placement="Center" AllowsTransparency="False">
                                <Grid Width="250" Height="150" Background="LightBlue">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="25"/>
                                        <RowDefinition Height="25"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock x:Name="txtbPPApplyOrderDiscount" Text="Apply Discount" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                                    <TextBlock x:Name="txtbPPSelectDiscount" Text="Select Percentage" Grid.Row="1" Grid.Column="0" />
                                    <ComboBox x:Name="cmbPPDiscountNos" Grid.Row="1" Grid.Column="1">
                                        <ComboBoxItem>5</ComboBoxItem>
                                        <ComboBoxItem>10</ComboBoxItem>
                                        <ComboBoxItem>15</ComboBoxItem>
                                        <ComboBoxItem>20</ComboBoxItem>
                                        <ComboBoxItem>25</ComboBoxItem>
                                    </ComboBox>
                                    <Button x:Name="btnPPDiscountCancel" Content="Cancel" Grid.Row="2" Grid.Column="0" Click="btnPPDiscountCancel_Click"/>
                                    <Button x:Name="btnPPDiscountApply" Content="Apply" Grid.Row="2" Grid.Column="1" Click="btnPPDiscountApply_Click"/>
                                </Grid>
                            </Popup>
                        </Grid>
                        <Grid Grid.Row="2"  Grid.Column="1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 30 0">
                                <TextBlock x:Name="txtbTotalDiscount" Style="{StaticResource txtBlock}" Text="Total Discount: "  />
                                <TextBlock x:Name="txtbTotalDiscountAmount" Style="{StaticResource txtBlock}" Text="0.00"  />
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="3"  Grid.Column="1" HorizontalAlignment="Right" Margin="0 0 30 0">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="btnServiceDeliveryPopUp" Content="%"  Width="20" Height="20" Click="btnServiceDeliveryPopUp_Click"/>
                                <TextBlock x:Name="txtbServiceDeliveryCharge" Style="{StaticResource txtBlock}" Text="Service/Delivery Charge: " />
                                <TextBox x:Name="txtServiceDeliveryCharge"  Width="20" Height="20"/>
                                <TextBlock x:Name="txtbTotalDeliveryChargeAmt" Visibility="Hidden" />
                            </StackPanel>
                            <Popup Name="ppDeliveryServicePopUp" Placement="Center" AllowsTransparency="False">
                                <Grid Width="250" Height="150" Background="LightBlue">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="25"/>
                                        <RowDefinition Height="25"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock x:Name="txtbPPApplyOrderDeliveryService" Text="Apply Delivery Service Charge" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                                    <TextBlock x:Name="txtbPPSelectDeliveryService" Text="Select Percentage" Grid.Row="1" Grid.Column="0" />
                                    <ComboBox x:Name="cmbPPPercentageDelivery" Grid.Row="1" Grid.Column="1">
                                        <ComboBoxItem>5</ComboBoxItem>
                                        <ComboBoxItem>10</ComboBoxItem>
                                        <ComboBoxItem>15</ComboBoxItem>
                                        <ComboBoxItem>20</ComboBoxItem>
                                        <ComboBoxItem>25</ComboBoxItem>
                                    </ComboBox>
                                    <Button x:Name="btnPPDeliveryCancel" Content="Cancel" Grid.Row="2" Grid.Column="0" Click="btnPPDeliveryCancel_Click"/>
                                    <Button x:Name="btnPPDeliveryApply" Content="Apply" Grid.Row="2" Grid.Column="1" Click="btnPPDeliveryApply_Click"/>
                                </Grid>
                            </Popup>
                        </Grid>
                        <Grid Grid.Row="4"  Grid.Column="1" HorizontalAlignment="Right" Margin="0 0 30 0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="txtbTotalPayable" Style="{StaticResource txtBlock}"  Text="Total Payable: "  />
                                <TextBlock x:Name="txtbTotalPayableAmount" Style="{StaticResource txtBlock}"  Text="0.00"  />
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="4">
                        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" >
                            <Button x:Name="btnCancel" Style="{StaticResource btnGray}" Content="Cancel"  Click="btnCancel_Click"/>
                            <Button x:Name="btnHold" Style="{StaticResource btnGray}" Content="Hold" Click="btnHold_Click"/>
                            <Button x:Name="btnDirectInvoice" Style="{StaticResource btnGray}" Content="Direct Invoice" Click="btnDirectInvoice_Click"/>
                            <Button x:Name="btnPlaceOrder" Style="{StaticResource btnGray}" Content="Place Order" Click="btnPlaceOrder_Click"/>
                        </StackPanel>
                        <Popup Name="ppDirectInvoice" Placement="Center" AllowsTransparency="False">
                            <Grid Width="300" Height="350" Background="LightBlue">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>

                                <!--Invoice PopUp Row 0-->
                                <TextBlock Text="Finalize Order" Margin="5,5,5,5" Height="20" Width="100" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <!--Invoice PopUp Row 1-->
                                <Separator  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <!--Invoice PopUp Row 2-->
                                <Label x:Name="lblPPTotalPayable" Content="Total Payable" Height="30" Width="100" Grid.Row="2" Grid.Column="0"/>
                                <Label x:Name="lblPPTotalPayableAmount" Content="0" Height="30" Width="100" Grid.Row="2" Grid.Column="1"/>

                                <!--Invoice PopUp Row 3-->
                                <Separator  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <!--Invoice PopUp Row 4-->
                                <Label x:Name="lblPPTotalPayment" Content="Total Payment" Height="30" Width="100" Grid.Row="4" Grid.Column="0"/>
                                <ComboBox x:Name="cmbPPPaymentMethod" Height="30" Width="130" Grid.Row="4" Grid.Column="1" ItemsSource="{Binding}" SelectedValuePath="Id" DisplayMemberPath="PaymentMethodName">
                                </ComboBox>

                                <!--Invoice PopUp Row 5-->
                                <Separator  Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <!--Invoice PopUp Row 6-->
                                <Label x:Name="lblPPPayAmount" Content="Pay Amount" Height="30" Width="100" Grid.Row="6" Grid.Column="0"/>
                                <Label x:Name="lblPPDueAmount" Content="Due Payment" Height="30" Width="100" Grid.Row="6" Grid.Column="1"/>

                                <!--Invoice PopUp Row 7-->
                                <TextBox x:Name="txtPPPayAmount" Text="0"  Height="30" Width="100" Grid.Row="7" Grid.Column="0"/>
                                <TextBox x:Name="txtPPDueAmount" Text="0"  Height="30" Width="100" Grid.Row="7" Grid.Column="1"/>

                                <!--Invoice PopUp Row 8-->
                                <Separator  Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <!--Invoice PopUp Row 9-->
                                <Label x:Name="lblPPGivenAmount" Content="Given Amount" Height="30" Width="100" Grid.Row="9" Grid.Column="0" />
                                <Label x:Name="lblPPChangeAmount" Content="Change Payment" Height="30" Width="100" Grid.Row="9" Grid.Column="1"/>

