<Window x:Class="RocketPOS.Helpers.Kitchen.KitchenView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RocketPOS.Helpers.Kitchen"
        mc:Ignorable="d"
        	Title="RocketPOS - Kitchen View" 
        ShowInTaskbar="True"  Topmost="true" WindowState="Maximized"  WindowStartupLocation="CenterOwner"  Background="#956eeb" 
        Height="840" Width="1294">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnRefreshAll" Margin="2,2,10,0" Style="{StaticResource btnOrange}" Grid.Row="0" Grid.Column="0"  Width="150" Height="35" HorizontalAlignment="Right" Click="btnRefreshAll_Click">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Image Source="../images/Search.png" Height="20"/>
                <TextBlock Text="Refresh" VerticalAlignment="Center" Margin="15,2,5,5"/>
            </StackPanel>
        </Button>
       
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.Column="0" Margin="1,1,0,0">
            <WrapPanel x:Name="wpKitchenView"  Orientation="Horizontal"  >

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
